{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ZenDo Web (localhost:3000)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "web-server",
        "--web-port",
        "3000",
        "--web-hostname",
        "localhost"
      ]
    },
    {
      "name": "ZenDo Windows",
      "request": "launch", 
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "windows"
      ]
    }
  ]
}