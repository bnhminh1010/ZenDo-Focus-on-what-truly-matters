{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ZenDo Web (Development)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "-d", "web-server",
        "--web-port", "3000",
        "--web-hostname", "localhost"
      ],
      "env": {
        "ENVIRONMENT": "development"
      },
      "console": "debugConsole"
    },
    {
      "name": "ZenDo Web (Chrome)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": [
        "-d", "chrome",
        "--web-port", "3000",
        "--web-hostname", "localhost"
      ],
      "env": {
        "ENVIRONMENT": "development"
      },
      "console": "debugConsole"
    },
    {
      "name": "ZenDo Mobile (Development)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "env": {
        "ENVIRONMENT": "development"
      },
      "console": "debugConsole"
    },
    {
      "name": "ZenDo Desktop (Windows)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["-d", "windows"],
      "env": {
        "ENVIRONMENT": "development"
      },
      "console": "debugConsole"
    },
    {
      "name": "ZenDo Production Build",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["--release"],
      "env": {
        "ENVIRONMENT": "production"
      },
      "console": "debugConsole"
    }
  ]
}